{
    "type": {
        "type": "string",
        "allowed": [
            "BOOLEAN",
            "BYTEA",
            "BIGINT",
            "INTEGER",
            "SMALLINT",
            "TIMESTAMP",
            "VARCHAR",
            "SERIAL",
            "REAL",
            "DOUBLE PRECISION",
            "SMALLSERIAL",
            "BIGSERIAL"
        ],
        "required": true,
        "meta": {
            "description": "Postgresql type keyword."
        }
    },
    "null": {
        "type": "boolean",
        "default": false,
        "meta": {
            "description": "Allow NULL entries if True."
        }
    },
    "array": {
        "type": "boolean",
        "default": false,
        "meta": {
            "description": "Entry is an array of 'type' if True."
        }
    },
    "primary_key": {
        "type": "boolean",
        "default": false,
        "dependencies": {
            "null": false
        },
        "meta": {
            "description": "Column is the primary key and automatically indexed if True. Primary key columns cannot have NULL entries."
        }
    },
    "unique": {
        "type": "boolean",
        "default": false,
        "dependencies": {
            "primary_key": false
        },
        "meta": {
            "description": "Entries in the column are unique and automatically indexed if True. Cannot also be primary keys."
        }
    },
    "index": {
        "type": {
            "type": "string",
            "allowed": [
                "btree",
                "hash",
                "gist",
                "gin"
            ],
            "dependencies": {
                "unique": false,
                "primary_key": false
            },
            "meta": {
                "description": "Column is indexed with the selected algorithm. PRIMARY KEY or UNIQUE columns cannot be additionally indexed."
            }
        }
    }
}